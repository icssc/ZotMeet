ameExplicit = !!config.name;\n\t}\n}\n\nexport type GetColumnsTableName<TColumns> = TColumns extends\n\tAnyMsSqlColumn<{ tableName: infer TTableName extends string }> | AnyMsSqlColumn<\n\t\t{ tableName: infer TTableName extends string }\n\t>[] ? TTableName\n\t: never;\n\nexport function index(name: string): IndexBuilderOn {\n\treturn new IndexBuilderOn(name, false);\n}\n\nexport function uniqueIndex(name: string): IndexBuilderOn {\n\treturn new IndexBuilderOn(name, true);\n}\n"],"mappings":";;;;AAuBA,IAAa,iBAAb,MAA4B;CAC3B,QAAiBA,0BAAsB;CAEvC,YAAY,AAAQC,MAAc,AAAQC,QAAiB;EAAvC;EAAsB;;CAE1C,GAAG,GAAG,SAAwD;AAC7D,SAAO,IAAI,aAAa,KAAK,MAAM,SAAS,KAAK,OAAO;;;AAW1D,IAAa,eAAb,MAAqD;CACpD,QAAiBF,0BAAsB;;CAGvC;CAEA,YAAY,MAAc,SAAwB,QAAiB;AAClE,OAAK,SAAS;GACb;GACA;GACA;GACA;;CAGF,MAAM,WAAsB;AAC3B,OAAK,OAAO,QAAQ;AACpB,SAAO;;;CAIR,MAAM,OAA0B;AAC/B,SAAO,IAAI,MAAM,KAAK,QAAQ,MAAM;;;AAItC,IAAa,QAAb,MAAmB;CAClB,QAAiBA,0BAAsB;CAEvC,AAAS;CACT,AAAS;CAET,YAAY,QAAqB,OAAmB;AACnD,OAAK,SAAS;GAAE,GAAG;GAAQ;GAAO;AAClC,OAAK,iBAAiB,CAAC,CAAC,OAAO;;;AAUjC,SAAgB,MAAM,MAA8B;AACnD,QAAO,IAAI,eAAe,MAAM,MAAM;;AAGvC,SAAgB,YAAY,MAA8B;AACzD,QAAO,IAAI,eAAe,MAAM,KAAK"}